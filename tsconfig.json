{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/components/*": [
        "./src/client/components/*"
      ],
      "@/constants/*": [
        "./src/constants/*"
      ],
      "@/lib/*": [
        "./src/client/lib/*"
      ],
      "@/resources/*": [
        "./src/client/resources/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/utils/*": [
        "./src/client/utils/*"
      ],
      "@/hooks/*": [
        "./src/client/hooks/*"
      ],
      "@/validators/*": [
        "./src/validators/*"
      ],
      "@/trpc/client": [
        "./src/trpc/client.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "src/trpc/*"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
